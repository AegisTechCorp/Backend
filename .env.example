# Environment
NODE_ENV=development

# Server
PORT=3000

# Database Configuration
DATABASE_HOST=
DATABASE_PORT=
DATABASE_USER=
DATABASE_PASSWORD=
DATABASE_NAME=aegis_db
DATABASE_SSL=false

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_ACCESS_SECRET=your-very-secure-access-token-secret-change-me-in-production
JWT_REFRESH_SECRET=your-very-secure-refresh-token-secret-change-me-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Server-Side Encryption Key (for traditional mode / non zero-knowledge)
# This key is used to encrypt files at rest on the server
# The server can decrypt these files (unlike zero-knowledge mode)
# IMPORTANT: Change this in production! Use a strong random key (32 bytes hex)
SERVER_ENCRYPTION_KEY=your-32-byte-hex-encryption-key-change-me-in-production-0123456789abcdef
